{
  "name": "shardis",
  "version": "0.0.4-SNAPSHOT",
  "description": "shardis project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shardis/shardis.git"
  },
  "author": "Shardis",
  "license": "Apache-2",
  "bugs": {
    "url": "https://github.com/shardis/shardis/issues"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "2.4.6",
    "@angular/compiler": "2.4.6",
    "@angular/core": "2.4.6",
    "@angular/forms": "2.4.6",
    "@angular/http": "2.4.6",
    "@angular/platform-browser": "2.4.6",
    "@angular/platform-browser-dynamic": "2.4.6",
    "@angular/router": "3.4.6",
    "@ngrx/core": "1.2.0",
    "@ngrx/effects": "2.0.0",
    "@ngrx/router-store": "1.2.5",
    "@ngrx/store": "2.2.1",
    "@ngrx/store-devtools": "3.2.3",
    "@webcomponents/custom-elements": "1.0.0-alpha.3",
    "clarity-angular": "0.8.5",
    "clarity-icons": "0.8.5",
    "clarity-ui": "0.8.5",
    "core-js": "2.4.1",
    "mutationobserver-shim": "0.3.2",
    "ngrx-store-freeze": "0.1.6",
    "ngrx-store-localstorage": "0.1.5",
    "reselect": "2.5.4",
    "rxjs": "5.1.0",
    "ts-helpers": "1.1.2",
    "web-animations-js": "2.2.2",
    "zone.js": "0.7.6"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0-beta.30",
    "@angular/compiler-cli": "2.4.6",
    "@types/jasmine": "2.5.41",
    "@types/node": "7.0.5",
    "angular2-dependencies-graph": "1.0.0-alpha.12",
    "codelyzer": "2.0.0-beta.4",
    "compodoc": "0.0.38",
    "conventional-changelog-cli": "1.2.0",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.4.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-cli": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-remap-istanbul": "0.5.0",
    "protractor": "5.1.0",
    "rimraf": "2.5.4",
    "ts-node": "2.0.0",
    "tslint": "4.4.2",
    "typescript": "2.1.5",
    "yarn": "0.19.1"
  },
  "scripts": {
    "clean": "yarn cache clean && rimraf coverage src/main/resources/static/*",
    "clean:dist": "rimraf src/main/resources/static/*",
    "preclean:install": "yarn run clean",
    "clean:install": "yarn upgrade",
    "preclean:start": "yarn run clean",
    "clean:start": "yarn start",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs": "compodoc -n Shardis -b / -s -r 9999 -p src/main/typescript/tsconfig.json",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "e2e:live": "protractor --elementExplorer",
    "lint": "ng lint",
    "lint:fix": "tslint --fix \"src/main/typescript/**/*.ts\" --project src/main/typescript/tsconfig.json --type-check  && tslint --fix \"e2e/**/*.ts\" --project e2e/tsconfig.json --type-check",
    "pretest": "rimraf coverage && yarn run lint",
    "test": "ng test -w false --code-coverage --progress false",
    "test:live": "ng test --progress false",
    "build": "yarn run build:dev",
    "prebuild:dev": "yarn run clean:dist",
    "build:dev": "ng build -dev --extract-css=false",
    "prebuild:prod": "yarn run clean:dist",
    "build:prod": "ng build -prod --aot --sourcemap=false --progress=false --extract-css",
    "server": "yarn run server:dev",
    "server:dev": "ng serve --p 4200 -pc proxy.json -dev --open --progress=false --extract-css=false --sourcemap",
    "server:prod": "ng serve --p 4200 -pc proxy.json -prod --aot --open --progress=false --extract-css --sourcemap",
    "ng": "ng",
    "ng:upgrade": "ng init -n shardis -sd src/main/typescript --style scss --prefix shardis --routing",
    "start": "yarn run server:dev"
  },
  "engines": {
    "node": ">= 7.0.0",
    "yarn": ">= 0.18.0"
  }
}
